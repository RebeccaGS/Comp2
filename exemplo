/* ----------------------------------------------------------------------------- */
char converteLetra(unsigned short resto){ //tem *?
    if (resto == 10){
        return 'A';
    }
    else if (resto == 11){
        return 'B';
    }
    else if (resto == 12){
        return 'C';
    }
    else if (resto == 13){
        return 'D';
    }
    else if (resto == 14){
        return 'E';
    }
    else{
        return 'F';
    }
}





